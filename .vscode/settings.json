{
  "editor.defaultFormatter": "dbaeumer.vscode-eslint",
  "eslint.rules.customizations": [
    {
      "rule": "*",
      "severity": "warn"
    }
  ],
  "eslint.workingDirectories": [
    {
      "pattern": "apps/*/"
    },
    {
      "pattern": "packages/*/"
    }
  ],
  "deno.enable": true,
  "deno.enablePaths": [
    "./supabase/functions",
    "./supabase/scripts",
    "./supabase/tests"
  ],
  "deno.importMap": "./supabase/functions/import_map.json",
  "deno.lint": true,
  "cSpell.words": [
    "apikey",
    "autofix",
    "clsx",
    "codegen",
    "dbdev",
    "firstname",
    "fkey",
    "flowtype",
    "generouted",
    "hookform",
    "ianvs",
    "lastname",
    "lucide",
    "manypkg",
    "matar",
    "matart",
    "messageformat",
    "moddatetime",
    "mycone",
    "nextjs",
    "papaparse",
    "plpgsql",
    "plusplus",
    "pnpx",
    "pointsource",
    "Postgrest",
    "predeploy",
    "prettiercache",
    "shadcn",
    "signup",
    "specdest",
    "supabase",
    "superjson",
    "svgr",
    "tailwindcss",
    "tanstack",
    "trpc",
    "tsbuildinfo",
    "typecheck",
    "unparse",
    "upsert"
  ],
  "[sql]": {
    "editor.defaultFormatter": "bradymholt.pgformatter"
  },
  "[postgres]": {
    "editor.defaultFormatter": "bradymholt.pgformatter"
  },
  "[dockerfile]": {
    "editor.defaultFormatter": "ms-azuretools.vscode-docker"
  },
  "[dotenv]": {
    "editor.defaultFormatter": "foxundermoon.shell-format"
  },
  "[ignore]": {
    "editor.defaultFormatter": "foxundermoon.shell-format"
  },
  "editor.tabSize": 2,
  "editor.detectIndentation": false,
  "search.exclude": {
    "package-lock.json": true
  },
  // TypeScript
  "typescript.tsdk": "node_modules/typescript/lib", // Use the workspace version of TypeScript
  "typescript.enablePromptUseWorkspaceTsdk": true, // For security reasons it's require that users opt into using the workspace version of typescript
  "typescript.preferences.autoImportFileExcludePatterns": [
    "next/router.d.ts",
    "next/dist/client/router.d.ts",
    "lucide-react",
    "@radix-ui/*",
    "react-day-picker"
  ],
  "typescript.preferences.preferTypeOnlyAutoImports": false, // Prefer type-only imports
  // Vitest
  "testing.openTesting": "neverOpen", // Don't open the testing view automatically when running tests
  // I18n
  "i18n-ally.localesPaths": ["src/locales"],
  "i18n-ally.keystyle": "nested",
  // Disable the default formatter, use ESLint instead
  "prettier.enable": false,
  "editor.formatOnSave": true,
  // Auto fix with ESLint on save
  "editor.codeActionsOnSave": [
    "source.addMissingImports",
    "source.fixAll.eslint"
  ],
  // Enable eslint for all supported languages
  "eslint.format.enable": true,
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact"
  ],
  "testing.automaticallyOpenTestResults": "neverOpen",
  "[typescriptreact]": {
    "editor.defaultFormatter": "dbaeumer.vscode-eslint"
  },
  "typescript.preferences.importModuleSpecifier": "non-relative",
  "javascript.preferences.importModuleSpecifier": "non-relative"
}
